<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/ktwe">

<RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="169dp"/>




<ImageView
    android:id="@+id/JakeCircleProfile"
    android:layout_width="140dp"
    android:layout_height="140dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="12dp"
    android:src="@drawable/jakecircleprofile"/>

<TextView
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="22dp"
    android:layout_marginStart="22dp"
    android:layout_marginTop="219dp"
    android:textSize="17sp"
    android:textColor="@android:color/white"
    android:textStyle="bold"
    android:text="Name" />

    <EditText
        android:id="@+id/name"
        android:layout_width="240dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

<Button
    android:id="@+id/editname"
    android:layout_width="50dp"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/textView"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:text=".."
    tools:ignore="UnknownId" />

<Button
    android:id="@+id/save"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:text="save"
    android:layout_alignParentRight="true" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_centerVertical="true"
        android:text="Bd"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/textView" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="234dp"
        android:text="Rank"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_alignRight="@+id/textView"
        android:layout_alignLeft="@+id/textView" />


    <EditText
        android:id="@+id/rank"
        android:layout_width="240dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="rank"
        android:textSize="17sp" />

    <Button
        android:id="@+id/editrank"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text=".."
        tools:ignore="UnknownId" />




    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="186dp"
        android:layout_alignStart="@+id/textView"
        android:text="Blood Group"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/textView" />


    <EditText
        android:id="@+id/bloodgroup"
        android:layout_width="173dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="bloodgroup"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="140dp"
        android:text="Contact Number"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/textView" />

    <EditText
        android:id="@+id/contactnumber"
        android:layout_width="147dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/textView5"
        android:layout_toEndOf="@+id/textView6"
        android:inputType="number"
        android:text="contactnumber"
        android:textSize="17sp"
        android:layout_toRightOf="@+id/textView6" />

    <Button
        android:id="@+id/editcontactnumber"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text=".."
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="97dp"
        android:text="Date of  Comission"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/textView" />

    <EditText
        android:id="@+id/dateofcommision"
        android:layout_width="134dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView6"
        android:layout_marginEnd="70dp"
        android:inputType="date"
        android:text="dateofcomission"
        android:textSize="17sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="56dp"
        android:text="Present Address"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/textView" />

    <EditText
        android:id="@+id/presentaddress"
        android:layout_width="147dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/name"

        android:layout_alignTop="@+id/textView7"
        android:layout_marginEnd="-2dp"
        android:inputType="textPersonName"
        android:text="presentaddress"
        android:textSize="17sp"
        android:layout_alignRight="@+id/name"
        android:layout_marginRight="-2dp" />


    <Button
        android:id="@+id/editpresentaddress"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text=".."
        tools:ignore="UnknownId" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="245dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/textView"
        android:ems="10"
        android:inputType="number"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@+id/textView" />


</RelativeLayout>